<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema Utama -->
    <style name="Theme.SiasatUKSW" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>

        <!-- Custom komponen -->
        <item name="android:editTextStyle">@style/CustomEditText</item>
        <item name="android:buttonStyle">@style/CustomButton</item>
    </style>

    <!-- Style untuk tombol -->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">48dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Style untuk EditText -->
    <style name="CustomEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:minHeight">48dp</item>
    </style>

</resources>
